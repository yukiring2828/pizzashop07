<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<servlet>
		<servlet-name>Pizza</servlet-name>
		<servlet-class>pizzashop.PizzaServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Pizza</servlet-name>
		<url-pattern>/pizza</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Menu</servlet-name>
		<servlet-class>pizzashop.MenuServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Menu</servlet-name>
		<url-pattern>/menu</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Request</servlet-name>
		<servlet-class>pizzashop.RequestServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Request</servlet-name>
		<url-pattern>/request</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>add_linkdata</servlet-name>
		<servlet-class>pizzashop.AddLinkDataServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>add_linkdata</servlet-name>
		<url-pattern>/add</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>addmenu_linkdata</servlet-name>
		<servlet-class>pizzashop.AddMenuLinkDataServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>addmenu_linkdata</servlet-name>
		<url-pattern>/addmenu</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>edit_linkdata</servlet-name>
		<servlet-class>pizzashop.EditLinkDataServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>edit_linkdata</servlet-name>
		<url-pattern>/edit</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Buy</servlet-name>
		<servlet-class>pizzashop.BuyServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Buy</servlet-name>
		<url-pattern>/buy</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Last</servlet-name>
		<servlet-class>pizzashop.LastServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Last</servlet-name>
		<url-pattern>/last</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>pizzashop.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>del_linkdata</servlet-name>
		<servlet-class>pizzashop.DelLinkDataServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>del_linkdata</servlet-name>
		<url-pattern>/del</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
